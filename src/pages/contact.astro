<style>
	.contact{
		width:var(--medium-width);
		margin: auto;
		background-color: var(--surface-2);
		padding: 1rem;
		box-shadow:var(--shadow-1);
		display: flex;
		flex-direction: column;
		gap:1rem;
		color:var(--neutral-color);
	}
	.contact_title{
		font-size: 1.5rem;
	}
	.contact_list{
		list-style: none;
		display:flex;
		flex-direction:column;
		gap:1rem;
	}
	.contact_link{
		color:var(--accent-color);
	}
	.contact_icon{
		fill:var(--neutral-color);
		height: 1rem;
		width: 1rem;
	}
</style>