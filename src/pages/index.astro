---
import type { Game } from "../api/gamesType";
import getProjets from "../api/getDatas";
import Card from "../components/Card";
import SvgFilter from "../components/SvgFilter.astro";
import TagsList from "../components/TagsList";
import Layout from "../layouts/Layout.astro";

const markdownProjets = (await Astro.glob('../pages/projets/*.md')).map(el=>el.frontmatter)as Game[]
const projets = await getProjets(markdownProjets);


---

<Layout title="Achtaitaipai | Accueil" pageCategory="projets">
    <TagsList client:load />
    <div class="projectsWrapper">
      {projets.map((el) => <Card project={el} client:load />)}
    </div>
    <SvgFilter />
</Layout>
